pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building the file'
                bat 'javac HelloWorld.java'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Run') {
            steps {
                echo 'Running the file'
                bat 'java HelloWorld.java'
            }
        }
    }
}
